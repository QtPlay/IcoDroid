<?xml version="1.0" encoding="UTF-8"?>
<Installer>
	<Name>IcoDroid</Name>
	<Version>1.2.0</Version>
	<Title>IcoDroid Installer</Title>
	<Publisher>Skycoder42</Publisher>
	<ProductUrl>https://github.com/Skycoder42/IcoDroid/releases</ProductUrl>
	<StartMenuDir>IcoDroid</StartMenuDir>
	<TargetDir>@ApplicationsDir@/IcoDroid.app</TargetDir>
	<AdminTargetDir>@ApplicationsDir@/IcoDroid.app</AdminTargetDir>
	<RunProgram>IcoDroid</RunProgram>
	<AllowSpaceInPath>true</AllowSpaceInPath>
	<AllowNonAsciiCharacters>true</AllowNonAsciiCharacters>
	<RemoteRepositories>
		<Repository>
			<Url>http://skynet.is-an-engineer.com/repositories/IcoDroid/mac</Url>
			<Enabled>1</Enabled>
			<DisplayName>IcoDroid Mac Repository</DisplayName>
		</Repository>
	</RemoteRepositories>
	<ControlScript>autoNextControl.js</ControlScript>
</Installer>

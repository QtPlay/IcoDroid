<?xml version="1.0" encoding="UTF-8"?>
<Installer>
	<Name>IcoDroid</Name>
    <Version>1.0.0</Version>
	<Title>IcoDroid Installer</Title>
	<Publisher>Skycoder42</Publisher>
	<ProductUrl>https://github.com/Skycoder42/IcoDroid/releases</ProductUrl>
	<StartMenuDir>IcoDroid</StartMenuDir>
	<TargetDir>@ApplicationsDir@/IcoDroid</TargetDir>
	<RunProgram>@TargetDir@/IcoDroid</RunProgram>
	<MaintenanceToolName>Uninstall</MaintenanceToolName>
	<AllowSpaceInPath>true</AllowSpaceInPath>
	<AllowNonAsciiCharacters>true</AllowNonAsciiCharacters>
	<ControlScript>uninstallcontrol.qs</ControlScript>
</Installer>
